{
  "name": "MarkBase Wallet",
  "slug": "wallet",
  "version": "1.0.0",
  "description": "Балансы, транзакции, пополнение, списание, платёжные методы.",
  "author": "MarkBase",
  "license": "MIT",
  "homepage": "https://wallet.markbase.ru",
  "api_base": "https://wallet.markbase.ru/api/wallet/v1",
  "port": 8070,
  "category": "payments",
  "requires": ["uam", "registry", "billing"],
  "provides": ["wallets", "transactions", "topup", "charge", "payment_methods"],
  "endpoints": {
    "wallet_create": "POST /api/wallet/v1/wallet",
    "wallet_get": "GET /api/wallet/v1/wallet",
    "balance": "GET /api/wallet/v1/balance",
    "topup": "POST /api/wallet/v1/topup",
    "charge": "POST /api/wallet/v1/charge",
    "transactions": "GET /api/wallet/v1/transactions",
    "payment_methods": "GET /api/wallet/v1/payment-methods",
    "overview": "GET /api/wallet/v1/overview",
    "subscriptions": "GET /api/wallet/v1/subscriptions",
    "disable_autopay": "POST /api/wallet/v1/subscriptions/:id/disable-autopay",
    "ensure_test_card": "POST /api/wallet/v1/payment-methods/test-card/ensure",
    "set_default_payment_method": "POST /api/wallet/v1/payment-methods/:id/set-default",
    "delete_payment_method": "DELETE /api/wallet/v1/payment-methods/:id",
    "sandbox_subscription_create": "POST /api/wallet/v1/sandbox/subscriptions",
    "sandbox_subscription_charge": "POST /api/wallet/v1/sandbox/subscriptions/:id/simulate-charge",
    "payment_intents_list": "GET /api/wallet/v1/payments/intents",
    "payment_intent_create": "POST /api/wallet/v1/payments/intents",
    "payment_intent_confirm": "POST /api/wallet/v1/payments/intents/:id/confirm",
    "payment_intent_cancel": "POST /api/wallet/v1/payments/intents/:id/cancel",
    "security_confirmations": "GET /api/wallet/v1/security/confirmations",
    "health": "GET /api/wallet/v1/health"
  },
  "config": {
    "WALLET_URL": "https://wallet.markbase.ru"
  },
  "compatibility": {
    "platforms": ["javascript", "python", "php", "wordpress", "any"],
    "min_version": "1.0.0"
  }
}
