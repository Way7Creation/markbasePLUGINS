  "category": "infrastructure",
  "requires": ["uam"],
  "provides": ["module_catalog", "api_keys", "hmac", "domain_resolve"],
  "endpoints": {
    "modules": "GET /api/registry/v1/modules",
    "module_get": "GET /api/registry/v1/modules/:slug",
    "connect": "POST /api/registry/v1/connect",
    "disconnect": "POST /api/registry/v1/disconnect",
    "connections": "GET /api/registry/v1/connections",
    "connection_status": "GET /api/registry/v1/connections/:module_slug/status",
    "resolve": "GET /api/registry/v1/resolve",
    "api_keys": "GET /api/registry/v1/api-keys",
    "api_key_regenerate": "POST /api/registry/v1/api-keys/:module_slug/regenerate",
    "health": "GET /api/registry/v1/health"
  },
